{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 80,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "jsxSingleQuote": false,
    "useTabs": false,
    "bracketSameLine": false,
    "plugins": ["prettier-plugin-tailwindcss"],
    "parser": "typescript",
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "overrides": [
      {
        "files": "*.{ts,tsx}",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  }